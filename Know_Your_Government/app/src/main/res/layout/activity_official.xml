<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile_application_development.know_your_government.MainActivity">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/location">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_marginLeft="0dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="8sp"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Name"
                android:gravity="center"
                android:textColor="@android:color/white"/>

            <TextView
                android:text="Designation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/designation"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                android:textSize="18dp"
                />

            <TextView
                android:text="Party"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/party"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/designation"
                android:gravity="center"
                android:textColor="@android:color/white"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/missingimage"
                android:id="@+id/sentatepicture"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/party"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp" />

            <TextView
                android:text="Address : "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sentatepicture"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="left"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:layout_marginStart="32dp"
                app:layout_constraintLeft_toRightOf="@+id/textView9"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/sentatepicture"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:autoLink="map"
                android:linksClickable="true"/>

            <TextView
                android:text="Phone : "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/address" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/address"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:autoLink="phone"
                app:layout_constraintLeft_toLeftOf="@+id/address" />

            <TextView
                android:text="Email : "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/phone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/phone"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:autoLink="email"
                app:layout_constraintLeft_toLeftOf="@+id/phone" />

            <TextView
                android:text="Website : "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textview17"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <TextView
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/website"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/email"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:autoLink="web"
                app:layout_constraintLeft_toLeftOf="@+id/email" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/facebook"
                android:id="@+id/facebook"
                app:layout_constraintTop_toBottomOf="@+id/website"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintHorizontal_bias="0.0" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/googleplus"
                android:id="@+id/googleplus"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/website"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/facebook"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/twitter"
                android:id="@+id/twitter"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/googleplus"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/website" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/youtube"
                android:id="@+id/youtube"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/website"
                app:layout_constraintLeft_toRightOf="@+id/twitter"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
